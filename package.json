{
  "name": "smst-common-entities",
  "version": "1.0.0",
  "main": "build/index.js",
  "repository": "git@github.com:morpheusapps/smst-common-entities.git",
  "author": "maorRoz",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "@types/swagger-jsdoc": "^3.0.1",
    "@types/swagger-ui-express": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/experimental-utils": "^1.11.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.13.7",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "faker": "^4.1.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "swagger-jsdoc": "^3.3.0",
    "swagger-ui-express": "^4.0.2"
  },
  "scripts": {
    "start": "node build/index.js",
    "start:ts": "node -r ts-node/register src/index.ts",
    "dev": "nodemon",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest --runInBand --watch",
    "test:coverage": "jest",
    "doc": "swagger-jsdoc -d swaggerMaker.js"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)(test).ts"
    ],
    "roots": [
      "<rootDir>/src"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index --again",
      "pre-commit": "yarn lint && git add && lint-staged"
    }
  }
}
